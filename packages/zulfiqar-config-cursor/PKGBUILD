# This file is part of Zulfiqar OS ( https://zulfiqar.os/ ).
# See COPYING for license details.

pkgname=zulfiqar-config-cursor
pkgver=3.08b06e5
pkgrel=1
pkgdesc='Zulfiqar OS cursor theme.'
arch=('any')
groups=('zulfiqar-config')
url='https://github.com/Zulfiqar OS/zulfiqar-config-cursor'
license=('custom:unknown')
depends=('libxcursor')
makedepends=('git')
source=("git+https://github.com/Zulfiqar OS/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/icons/zulfiqar-cursor"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md

  cp -at "$pkgdir/usr/share/icons/zulfiqar-cursor" index.theme cursors
}

