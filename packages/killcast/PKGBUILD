pkgname=killcast
pkgver=30.ee81cfa
pkgrel=8
pkgdesc='Manipulate Chromecast Devices in your Network.'
arch=('any')
groups=('zulfiqar' 'zulfiqar-exploitation' 'zulfiqar-automation')
url='https://github.com/thewhiteh4t/killcast'
license=('custom:unknown')
depends=('python' 'python-requests')
makedepends=('git')
source=("git+https://github.com/thewhiteh4t/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -Dm 755 "$pkgname.py" "$pkgdir/usr/bin/$pkgname"
}

