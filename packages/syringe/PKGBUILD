pkgname=syringe
pkgver=12.79a703e
pkgrel=2
groups=('zulfiqar' 'zulfiqar-backdoor' 'zulfiqar-binary' 'zulfiqar-windows')
pkgdesc='A General Purpose DLL & Code Injection Utility.'
arch=('any')
url='https://github.com/securestate/syringe'
license=('GPL3')
depends=()
makedepends=('git')
source=("git+https://github.com/securestate/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/windows/$pkgname"
  cp -a * "$pkgdir/usr/share/windows/$pkgname/"
}

