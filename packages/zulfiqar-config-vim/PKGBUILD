# This file is part of Zulfiqar OS ( https://zulfiqar.os/ ).
# See COPYING for license details.

pkgname=zulfiqar-config-vim
pkgver=3.620775f
pkgrel=1
epoch=1
pkgdesc='Zulfiqar OS config for the VIM editor.'
arch=('any')
groups=('zulfiqar-config')
url='https://github.com/Zulfiqar OS/zulfiqar-config-vim'
license=('custom:unknown')
depends=('vim' 'ctags')
makedepends=('git')
source=('git+https://github.com/Zulfiqar OS/zulfiqar-config-vim.git')
install="$pkgname.install"
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/zulfiqar/config/vim"

  cp -a vimrc vim "$pkgdir/usr/share/zulfiqar/config/vim/"
}

