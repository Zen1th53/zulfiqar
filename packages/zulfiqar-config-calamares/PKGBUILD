# This file is part of Zulfiqar OS ( https://zulfiqar.os/ ).
# See COPYING for license details.

pkgname=zulfiqar-config-calamares
pkgver=20.b453a21
pkgrel=1
pkgdesc='Zulfiqar OS config for the calamares installer.'
arch=('any')
groups=('zulfiqar-config')
url='https://github.com/Zulfiqar OS/zulfiqar-config-calamares'
license=('custom:unknown')
depends=('calamares')
makedepends=('git')
source=("git+https://github.com/Zulfiqar OS/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/etc/calamares"

  cp -a calamares/* "$pkgdir/etc/calamares"
}

