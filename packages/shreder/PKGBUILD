# This file is part of Zulfiqar OS ( https://zulfiqar.os/ ).
# See COPYING for license details.

pkgname=shreder
pkgver=115.a108575
pkgrel=4
pkgdesc='A powerful multi-threaded SSH protocol password bruteforce tool.'
groups=('zulfiqar' 'zulfiqar-cracker')
arch=('any')
url='https://github.com/EntySec/Shreder'
license=('MIT')
depends=('python' 'python-paramiko')
makedepends=('git' 'python-setuptools')
source=("$pkgname::git+https://github.com/EntySec/Shreder.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  python setup.py build
}

package() {
  cd $pkgname

  python setup.py install --root="$pkgdir" --prefix=/usr -O1 --skip-build

  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}

