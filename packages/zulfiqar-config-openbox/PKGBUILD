pkgname=zulfiqar-config-openbox
pkgver=40.6914684
pkgrel=1
pkgdesc='Zulfiqar OS menu, theme and config for openbox window manager.'
arch=('any')
groups=('zulfiqar-config')
url='https://github.com/Zulfiqar OS/zulfiqar-config-openbox'
license=('custom')
depends=('openbox' 'feh' 'zulfiqar-wallpaper' 'terminus-font' 'rxvt-unicode')
makedepends=('git')
replaces=('zulfiqar-menu-openbox')
provides=('zulfiqar-menu-openbox')
conflicts=('zulfiqar-menu-openbox')
source=("git+https://github.com/Zulfiqar OS/$pkgname.git")
sha512sums=('SKIP')
install="$pkgname.install"

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/zulfiqar/config/openbox"

  cp -a * "$pkgdir/usr/share/zulfiqar/config/openbox"
}

