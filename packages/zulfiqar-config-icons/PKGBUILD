# This file is part of Zulfiqar OS ( https://zulfiqar.os/ ).
# See COPYING for license details.

pkgname=zulfiqar-config-icons
pkgver=6.f4bf107
pkgrel=1
pkgdesc='Zulfiqar OS icons theme.'
arch=('any')
groups=('zulfiqar-config')
url='https://github.com/Zulfiqar OS/zulfiqar-config-icons'
license=('custom:unknown')
depends=('gtk-update-icon-cache')
makedepends=('git')
source=("git+https://github.com/Zulfiqar OS/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/icons/zulfiqar-icons"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md

  rm README.md

  cp -a * "$pkgdir/usr/share/icons/zulfiqar-icons/"
}

